{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "ES2022",
      "moduleResolution": "node",
      "ignoreDeprecations":"6.0",
      "outDir": "dist",
      "rootDir": "..",
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": ["src", "../shared"],
    "exclude": ["node_modules", "dist"]
  }
  